    {
        <input type="hidden" name="ProductId"  value="@product.Id" />
        <div>상품이름 : @product.Name </div>
        <div>생산갯수 : <input type="text" name="Count"  value="0" /> </div>
        <div>생산날짜 : <input type="date" id="currentDate" name="CreateTime"> </div>   
        <p></p>
    }
    <p></p>
    <button>상품등록</button>
</form>

